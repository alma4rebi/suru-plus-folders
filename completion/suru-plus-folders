# suru-plus-folders completion
#
# @author: Sergei Eremenko (https://github.com/SmartFinn)
# @license: MIT license (MIT)
# @link: https://github.com/gusbemacbe/suru-plus-folders

_suru_plus_folders() {
	local cur prev
	local -a opts=(
		-h --help
		-V --version
		-v --verbose
		-C --color
		-D --default
		-R --restore
		-l --list
		-t --theme
		-u --update-caches
	)

	_get_comp_words_by_ref cur prev

	case "$prev" in
		-C|--color)
			# no completion, wait for user input
			;;
		-t|--theme)
			# no completion, wait for user input
			;;
		*)
			COMPREPLY=( $(compgen -W "${opts[*]}" -- "${cur}") )
			;;
	esac
}

complete -F _suru_plus_folders suru-plus-folders

